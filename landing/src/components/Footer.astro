---
import { getTranslation, type Language } from '../i18n/translations';
import Logo from './Logo';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

const t = (key: any) => getTranslation(lang, key);
---

<footer class="bg-bg-secondary/80 backdrop-blur-sm border-t border-custom-border">
  <div class="section-container py-12">
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <!-- Branding -->
      <div>
        <div class="flex items-center space-x-3 mb-4">
          <Logo client:load className="w-8 h-8" size={32} />
          <span class="text-xl font-bold gradient-text">SkyPilot</span>
        </div>
        <p class="text-text-secondary text-sm mb-4">
          {t('footer.disclaimer')}
        </p>
        <div class="flex items-center gap-2 text-text-muted text-xs">
