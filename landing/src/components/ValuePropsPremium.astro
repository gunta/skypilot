---
import { getTranslation, type Language } from '../i18n/translations';
import GradualBlur from './GradualBlur';
import ScrollReveal from './ScrollReveal';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = (key: any) => getTranslation(lang, key);
---

<section class="section-container backdrop-premium relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-bg-secondary/30 to-transparent"></div>
  
  <div class="relative z-10">
    <ScrollReveal client:load>
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-2 mb-6 text-xs font-bold tracking-wider text-accent-primary uppercase glass-card rounded-full">
          Why Choose SkyPilot
        </span>
        <h2 class="text-5xl sm:text-6xl font-black mb-4">
          <span class="text-gradient-animate">
            {t('valueprops.title')}
          </span>
        </h2>
      </div>
    </ScrollReveal>
    
    <div class="grid md:grid-cols-3 gap-8 stagger-children">
      <!-- Card 1: No Watermarks -->
      <ScrollReveal client:load delay={0.1}>
        <div class="group glass-card rounded-3xl p-8 hover-lift relative overflow-hidden">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-br from-accent-primary/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative z-10">
            <div class="mb-6 inline-flex p-4 bg-gradient-to-br from-accent-primary/20 to-accent-primary/10 rounded-2xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold mb-4 group-hover:text-accent-primary transition-colors">
              {t('valueprops.zero.title')}
            </h3>
            
            <div class="space-y-3 text-text-secondary">
              <p class="flex items-start gap-2">
                <span class="text-accent-primary mt-1">•</span>
                <span>{t('valueprops.zero.desc1')}</span>
              </p>
              <p class="flex items-start gap-2">
                <span class="text-accent-primary mt-1">•</span>
                <span>{t('valueprops.zero.desc2')}</span>
              </p>
            </div>
            
            <!-- Hover effect line -->
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-accent-primary to-accent-secondary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
          </div>
        </div>
      </ScrollReveal>
      
      <!-- Card 2: Pro at Cost -->
      <ScrollReveal client:load delay={0.2}>
        <div class="group glass-card rounded-3xl p-8 hover-lift relative overflow-hidden">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-br from-accent-secondary/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative z-10">
            <div class="mb-6 inline-flex p-4 bg-gradient-to-br from-accent-secondary/20 to-accent-secondary/10 rounded-2xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-accent-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold mb-4 group-hover:text-accent-secondary transition-colors">
              {t('valueprops.cheap.title')}
            </h3>
            
            <div class="space-y-3 text-text-secondary">
              <p class="flex items-start gap-2">
                <span class="text-accent-secondary mt-1">•</span>
                <span>{t('valueprops.cheap.desc1')}</span>
              </p>
              <p class="flex items-start gap-2">
                <span class="text-accent-secondary mt-1">•</span>
                <span>{t('valueprops.cheap.desc2')}</span>
              </p>
            </div>
            
            <!-- Premium badge -->
            <div class="absolute top-6 right-6 px-3 py-1 bg-gradient-to-r from-accent-secondary to-accent-primary text-white text-xs font-bold rounded-full">
              PRO
            </div>
            
            <!-- Hover effect line -->
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-accent-secondary to-accent-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
          </div>
        </div>
      </ScrollReveal>
      
      <!-- Card 3: Open Source -->
      <ScrollReveal client:load delay={0.3}>
        <div class="group glass-card rounded-3xl p-8 hover-lift relative overflow-hidden">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-br from-success/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative z-10">
            <div class="mb-6 inline-flex p-4 bg-gradient-to-br from-success/20 to-success/10 rounded-2xl group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold mb-4 group-hover:text-success transition-colors">
              {t('valueprops.transparent.title')}
            </h3>
            
            <div class="space-y-3 text-text-secondary">
              <p class="flex items-start gap-2">
                <span class="text-success mt-1">•</span>
                <span>{t('valueprops.transparent.desc1')}</span>
              </p>
              <p class="flex items-start gap-2">
                <span class="text-success mt-1">•</span>
                <span>{t('valueprops.transparent.desc2')}</span>
              </p>
            </div>
            
            <!-- Hover effect line -->
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-success to-accent-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
          </div>
        </div>
      </ScrollReveal>
    </div>
    
    <!-- Stats row -->
    <ScrollReveal client:load delay={0.5}>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-20 p-8 glass-card rounded-3xl">
        <div class="text-center">
          <div class="text-4xl font-black text-gradient-animate mb-2">100%</div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Client-Side</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-black text-gradient-animate mb-2">$0</div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Markup</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-black text-gradient-animate mb-2">MIT</div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Licensed</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-black text-gradient-animate mb-2">150+</div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Currencies</div>
        </div>
      </div>
    </ScrollReveal>
  </div>
  
  <GradualBlur 
    client:load 
    target="parent" 
    position="bottom" 
    height="8rem" 
    strength={3} 
    divCount={7} 
    curve="bezier" 
    exponential={true} 
    opacity={0.8} 
  />
</section>
