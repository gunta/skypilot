{
  "name": "skypilot",
  "version": "0.5.0",
  "description": "CLI and TUI for OpenAI's Sora 2 video generation API.",
  "keywords": [
    "openai",
    "sora",
    "video",
    "cli",
    "ink"
  ],
  "homepage": "https://github.com/gunta/skypilot#readme",
  "bugs": {
    "url": "https://github.com/gunta/skypilot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gunta/skypilot.git"
  },
  "license": "MIT",
  "author": "gunta",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": "./dist/cli.js",
    "./tui/app": "./dist/tui/App.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "skypilot": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "typecheck": "tsc --noEmit",
    "generate:changelog": "tsx scripts/generate-changelog.ts",
    "update:homebrew": "tsx scripts/update-homebrew-formula.ts",
    "release": "tsx scripts/release.ts",
    "prepublishOnly": "npm run build",
    "cli": "bun run src/cli.ts",
    "tui": "bun run src/cli.ts tui",
    "list": "bun run src/cli.ts list"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@inlang/paraglide-js": "^2.4.0",
    "@libsql/client": "^0.15.15",
    "@xstate/react": "^6.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "drizzle-orm": "^0.44.6",
    "ink": "^6.3.1",
    "ink-big-text": "^2.0.0",
    "ink-chart": "^0.1.1",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.1.0",
    "ink-text-input": "^6.0.0",
    "openai": "^6.2.0",
    "react": "^19.2.0",
    "string-width": "^8.1.0",
    "xstate": "^5.22.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "latest",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.0",
    "@types/react-reconciler": "^0.32.1",
    "@types/semver": "^7.7.1",
    "semver": "^7.6.3",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "ultracite": "^5.6.1"
  },
  "engines": {
    "node": ">=18"
  }
}
